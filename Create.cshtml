@model CRUDApplication.Models.Employee

<h2>Create Employee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mob)
        @Html.TextBoxFor(model => model.Mob, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Mob)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Desgnation)
        @Html.TextBoxFor(model => model.Desgnation, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Desgnation)
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>

}
