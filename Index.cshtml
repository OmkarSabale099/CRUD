@model IEnumerable<CRUDApplication.Models.Employee>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Mob</td>
                <td>@employee.Desgnation</td>
                <td>
                    <a href="@Url.Action("Details", new { id = employee.Id })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = employee.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = employee.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a href="@Url.Action("Create")">Create New Employee</a>
</p>
